<?xml version="1.0" encoding="utf-8"?>
<package>
    <metadata>
        <id>engenious</id>
        <version>$version</version>
        <title>engenious</title>
        <authors>jvbsl</authors>
        <projectUrl>https://github.com/jvbsl/engenious</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>3D Engine similar structure to XNA</description>
    </metadata>

    <files>
        <!-- Lib -->
        <file src="engenious\bin\Release\*" exclude="**\*.pdb;**\*.mdb" target="lib\net40" />
        <file src="engenious/bin/Release/*" exclude="**/*.pdb;**/*.mdb" target="lib/net40" />

        <!-- ContentTool -->
        <file src="ContentTool\bin\Release\*" exclude="**\*.pdb;**\*.mdb"  target="tools\net40" />
        <file src="ContentTool/bin/Release/*" exclude="**/*.pdb;**/*.mdb"  target="tools/net40" />

        <!-- Targets -->
        <file src="engenious.targets" target="build" />
    </files>
</package>
